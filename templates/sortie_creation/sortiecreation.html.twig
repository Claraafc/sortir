        <button type="submit" name="publier" class="btn btn-primary" value="publier">Publier</button>
        <button type="submit" name="enregistrer" class="btn btn-success" value="enregistrer">Enregistrer</button>
        <a class="btn btn-outline-danger" href="{{ path('affichage_sortie') }}">Annuler</a>

        {{ form_end(sortieForm) }}



    </main>


{% endblock %}

{% block javascripts %}
    {# JavaScript filter places by cities #}
    {{ parent() }}
    <script>
        $('#sortie_ville').change(function () {
            $('#sortie_lieu').empty();
            $.get('creation/ajax/'+$(this).val())
                .done(function(data) {
                    $.each(data, function (key, lieu) {
                        console.log(lieu);
                        $('#sortie_lieu').append('<option value="'+lieu.id+'">'+lieu.nom+'</option>');

                    });
                });
        });

    </script>

    <script>
        $('#sortie_lieu').change(function () {
            $.get('creation/requeteLieu/'+$(this).val())
                .done(function (data) {
                    //console.log(data);
                    $('#test_ville').append('<label>Rue : <input value=" '+data.rue+'"></label>');
                    {#$('#infoLieu').text('Adresse : ' + data.rue);#}
                    $('#infoLatitude').text('Latitude : ' + data.longitude);
                    $('#infoLongitude').text('Longitude : ' + data.latitude);
                    $('#infoVille').text('Code Postal : ' + data.codePostal)

                });
        });
    </script>


