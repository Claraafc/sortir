{% extends 'base.html.twig' %}

{% block title %}Hello LieuController!{% endblock %}

{% block body %}
    <main>
        <h1>Ajouter des lieux</h1>
        {{ form_start(lieuForm) }}

        {{ form_row(lieuForm.nom) }}
        {{ form_row(lieuForm.rue) }}
        {{ form_row(lieuForm.longitude) }}
        {{ form_row(lieuForm.latitude) }}
        {{ form_row(lieuForm.ville) }}

        {{ form_widget(lieuForm) }}
        <button type="submit" class="btn btn-primary">Modifier</button>
        {{ form_end(lieuForm) }}<br>
        <a href="{{ path('sortie_update', { 'id': sortieID}) }}" class="btn btn-outline-secondary">Retour</a>
    </main>
{% endblock %}
