{% extends 'base.html.twig' %}

{% block title %}Hello LieuController!{% endblock %}

{% block body %}
    <main>
        <h1>Ajouter des lieux</h1>
        {{ form_start(lieuForm) }}

        {{ form_row(lieuForm.nom) }}
        {{ form_row(lieuForm.rue) }}
        {{ form_row(lieuForm.longitude) }}
        {{ form_row(lieuForm.latitude) }}
        {{ form_row(lieuForm.ville) }}

        {{ form_widget(lieuForm) }}
        <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(lieuForm) }}<br>
        <a href="{{ path('sortie_creation') }}" class="btn btn-outline-secondary">Retour</a>
        <!-- Modal -->
        <div class="modal fade" id="modalForm" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">Ã—</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Ajouter des lieux</h4>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <p class="statusMsg"></p>
                        <form role="form">
                            <div class="form-group">
                                <label for="inputName">Rue</label>
                                <input type="text" class="form-control" id="rue"/>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail">Latitude</label>
                                <input type="text" class="form-control" id="latitude"/>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail">Longitude</label>
                                <input type="text" class="form-control" id="longitude"/>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail">Code Postal</label>
                                <input type="text" class="form-control" id="codePostal"/>
                            </div>
                        </form>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary submitBtn" onclick="submitContactForm()">SUBMIT
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
